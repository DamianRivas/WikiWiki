<div>
  <% if policy(@wiki).destroy? %>
    <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger pull-right', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
  <% end %>
  <% if policy(@wiki).edit? %>
    <%= link_to "Edit Wiki", edit_wiki_path, class: 'btn btn-success pull-right' %>
  <% end %>
  <h1><%= @wiki.title %></h1>
  <h2>
    <small>
      Last edited <%= time_ago_in_words(@wiki.updated_at) %> ago.
    </small>
  </h2>
</div>

<div class="row">
  <div class="col-md-12">
    <%= @markdown.render(@wiki.body).html_safe %>
  </div>
</div>
